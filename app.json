{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.hydrawise",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Hydrawise"
  },
  "description": {
    "en": "Hydrawise"
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/garden-sprinkler-small.png",
    "large": "/assets/images/garden-sprinkler-large.png",
    "xlarge": "/assets/images/garden-sprinkler-xlarge.png"
  },
  "author": {
    "name": "Monique Jilesen",
    "email": "monique.jilesen@gmail.com"
  },
  "flow": {
    "actions": [
      {
        "id": "set_polling_mode",
        "title": {
          "en": "Turn polling on / off",
          "nl": "Polling aan/uit zetten"
        },
        "titleFormatted": {
          "en": "Turn polling [[newPollingMode]]",
          "nl": "Zet polling [[newPollingMode]]"
        },
        "args": [
          {
            "name": "newPollingMode",
            "type": "dropdown",
            "title": {
              "en": "Mode"
            },
            "values": [
              {
                "id": "on",
                "label": {
                  "en": "On",
                  "nl": "aan"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "uit"
                }
              },
              {
                "id": "once",
                "label": {
                  "en": "Once",
                  "nl": "eenmaal"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "set_polling_speed",
        "title": {
          "en": "Set Polling Interval",
          "nl": "Stel de update frequentie in"
        },
        "titleFormatted": {
          "en": "Set Polling Interval to [[syncSpeed]]",
          "nl": "Update frequentie naar [[syncSpeed]]"
        },
        "args": [
          {
            "name": "syncSpeed",
            "type": "number",
            "title": {
              "en": "Interval"
            },
            "min": 30,
            "placeholder": {
              "en": "Seconds",
              "nl": "Seconden"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Zone"
      },
      "class": "other",
      "capabilities": [
        "onoff",
        "meter_remaining_duration"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "duration": true
        }
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "cloud"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "options": {
            "singular": false
          },
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "small": "/drivers/zone/assets/images/garden-sprinkler-small.png",
        "large": "/drivers/zone/assets/images/garden-sprinkler-large.png",
        "xlarge": "/drivers/zone/assets/images/garden-sprinkler-xlarge.png"
      },
      "id": "zone",
      "settings": [
        {
          "id": "duration",
          "type": "number",
          "label": {
            "en": "Defaut duration",
            "nl": "Default sproei duur"
          },
          "value": 15,
          "min": 1,
          "max": 180,
          "units": {
            "en": "minutes",
            "nl": "minuten"
          },
          "hint": {
            "en": "Default watering duration.",
            "nl": "Default sproei duur"
          }
        }
      ]
    }
  ],
  "capabilities": {
    "meter_remaining_duration": {
      "type": "number",
      "title": {
        "en": "Remaining duration"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false
    }
  }
}